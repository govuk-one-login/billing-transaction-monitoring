{
  "name": "di-billing-transaction-monitoring",
  "description": "Monitors user identity verification events for billing purposes",
  "version": "0.0.1",
  "type": "module",
  "devDependencies": {
    "@aws-sdk/client-athena": "^3.188.0",
    "@aws-sdk/client-cloudformation": "^3.188.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.188.0",
    "@aws-sdk/client-lambda": "^3.188.0",
    "@aws-sdk/client-s3": "^3.188.0",
    "@aws-sdk/client-sns": "^3.188.0",
    "@aws-sdk/client-sqs": "^3.188.0",
    "@aws-sdk/signature-v4-crt": "^3.226.0",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@types/aws-lambda": "^8.10.101",
    "@types/express": "^4.17.1",
    "@types/jest": "^29.0.1",
    "@types/lodash": "^4.14.195",
    "@types/mailparser": "^3.4.0",
    "@types/node": "^18.7.16",
    "@types/nunjucks": "^3.2.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.38.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk-client-mock": "^2.0.0",
    "babel-jest": "^29.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "csvtojson": "^2.0.10",
    "delay": "^5.0.0",
    "djlint": "^1.31.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-html-reporters": "^3.1.4",
    "jest-jasmine2": "^29.2.2",
    "jest-junit": "^14.0.1",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.5.28",
    "lint-staged": "^13.1.0",
    "node-cache": "^5.1.2",
    "node-loader": "^2.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react-test-renderer": "^18.2.0",
    "sass": "^1.63.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "ts-jest-mock-import-meta": "^1.0.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.76.2",
    "webpack-cli": "^4.10.0",
    "yaml": "^2.1.3"
  },
  "scripts": {
    "husky:install": "husky install",
    "test": "jest --maxWorkers=4 --silent",
    "test:integration": "jest --config jest.integration.config.ts --maxWorkers=4 $JEST_ARGS; RET=$? ; npm run test:cleanup:reports ; exit $RET",
    "test:end2end": "jest --config jest.e2e.config.ts",
    "test:cleanup:reports": "cd reports/jest-html-reports && ../../integration_tests/cleanup-jest-html-reports.sh 3",
    "test:integration:local": "jest --setupFiles=./integration_tests/setEnvVars.ts --testPathIgnorePatterns athena-query-tests s3-vat-tests --config jest.integration.config.ts",
    "build": "webpack",
    "lint": "npm run lint:ts && npm run lint:njk",
    "lint:ts": "eslint . --fix",
    "lint:njk": "djlint ./src/frontend/views/* --reformat",
    "build:template": "node ./src/tools/yaml-import.js",
    "checkov": "checkov --quiet -f template.yaml --framework cloudformation --external-checks-git git@github.com:alphagov/di-devplatform-checkov-hook.git//src/gds_digitalidentity_checkovhook/custom_policies",
    "sam:build": "npm run build && npm run build:template && npm run checkov && sam build",
    "sam:deploy": "sam deploy --disable-rollback --no-fail-on-empty-changeset --stack-name di-btm-${ENV_NAME} --parameter-overrides Environment=dev PrivateConfigStack=${CONFIG_NAME:-none} TestRoleArn=${TEST_ROLE_ARN:-none} EnableAlerting=${ENABLE_ALERTING:-false} --s3-prefix ${ENV_NAME}",
    "sam:teardown": "ts-node --esm src/tools/teardown-cf-stack.ts",
    "typecheck": "tsc --noEmit",
    "dev:ts": "nodemon --esm --experimental-specifier-resolution=node src/frontend/server.ts",
    "dev:css": "sass node_modules/govuk-frontend/govuk/all.scss node_modules/govuk-frontend/govuk/all.css -w",
    "dev": "NODE_ENV=development npm-run-all -p dev:css dev:ts",
    "build:css": "sass node_modules/govuk-frontend/govuk/all.scss node_modules/govuk-frontend/govuk/all.css",
    "predev": "npm run build:css",
    "prebuild": "npm run build:css",
    "fetch-s3": "NODE_OPTIONS=--es-module-specifier-resolution=node ts-node --esm src/tools/fetch-s3.ts"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,json,ts,yaml,yml}": "prettier --write",
    "*.{njk}": "djlint --reformat"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.6.0",
    "@aws-sdk/util-utf8-node": "^3.259.0",
    "@vendia/serverless-express": "^4.10.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "govuk-frontend": "^4.6.0",
    "jsonpath-plus": "^7.2.0",
    "lodash.isequal": "^4.5.0",
    "mailparser": "^3.6.4",
    "nunjucks": "^3.2.4"
  }
}
