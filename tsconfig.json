{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "lib": ["es7", "dom"],
    "outDir": "./dist/",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "types": ["node", "jest", "@wdio/mocha-framework", "@wdio/globals/types"]
  },
  "exclude": ["reports"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
